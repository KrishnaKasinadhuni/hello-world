# AWS Configuration
AWS_REGION=us-east-1
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/config-manager-role
AWS_ROLE_SESSION_NAME=config_manager_service
CREDENTIAL_CACHE_DURATION=3600  # 1 hour in seconds

# DynamoDB Configuration
DYNAMODB_TABLE=config_values

# Service Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=false

# Security
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3 